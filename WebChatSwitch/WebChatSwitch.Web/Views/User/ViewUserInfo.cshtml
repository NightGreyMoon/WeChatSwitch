@model WebChatSwitch.DAL.UserAccount

@{
    ViewBag.Title = "User Account Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>


</script>

<div class="controlForm">
    @Html.AntiForgeryToken()

    <div class="controlForm">
        <div class="controlBlock">
            <div class="controlLabel">
                <h2>User Info</h2>
            </div>
        </div>
        <div class="controlBlock">
            <div class="controlLabel">
                <p>
                    WeChat Account:
                </p>
            </div>
            <div class="controlContent">
                @Html.Label("lbWeChatAccount", Model.WeChatNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.Hidden("hideOpenId", Model.OpenId)
            </div>
        </div>
        <div class="controlBlock">
            <div class="controlLabel">
                <p>
                    Name:
                </p>
            </div>
            <div class="controlContent">
                @Html.Label("lbUserName", Model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="controlBlock">
            <div class="controlLabel">
                <p>
                    Nick Name:
                </p>
            </div>
            <div class="controlContent">
                @Html.Label("txtNickName", Model.WeChatNickName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="controlBlock">
            <div class="controlLabel">
                <p>
                    Self-introduction:
                </p>
            </div>
            <div class="controlContent">
                @Html.Label("txtSelfIntroduction", Model.Remark, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="controlBlock">
            <div class="controlLabel">
                <p>
                    Surplus Publish Number:
                </p>
            </div>
            <div class="controlContent">
                @Html.Label("lbSurplusPublishNumber", Model.Balance.ToString(), new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
</div>